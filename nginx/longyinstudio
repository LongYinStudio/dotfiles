server {
	listen 443 ssl;

	server_name longyinstudio.cn www.longyinstudio.cn;

	root /var/www/html/longyinstudio;
	index index.html;

	ssl_certificate /var/www/html/longyinstudio/www.longyinstudio.cn_bundle.pem;
    ssl_certificate_key /var/www/html/longyinstudio/www.longyinstudio.cn.key;
    ssl_session_timeout 5m;
    ssl_ciphers ECDHE-RSA-AES128-GCM-SHA256:ECDHE:ECDH:AES:HIGH:!NULL:!aNULL:!MD5:!ADH:!RC4;
    ssl_protocols TLSv1 TLSv1.1 TLSv1.2;
    ssl_prefer_server_ciphers on;

	location / {
		try_files $uri $uri/ =404;
	}
}

server {
	listen 80;
	server_name longyinstudio.cn www.longyinstudio.cn;
	rewrite ^(.*) https://$server_name$1 permanent;
}
